<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NotificationDetailActivity">

    <RelativeLayout
        android:background="@color/color_pink"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_app_bar" />

        <TextView
            android:textSize="@dimen/txt_size_20sp"
            android:layout_margin="@dimen/margin_10dp"
            android:id="@+id/txt_time_notification_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar" />

        <TextView
            android:textColor="@color/color_btn_login"
            android:id="@+id/txt_title_notification_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_time_notification_detail"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:textSize="@dimen/txt_size_25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_notification_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_cover_image_height"
            android:layout_below="@+id/txt_title_notification_detail"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:textSize="@dimen/txt_size_20sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/txt_content_notification_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_notification_detail"
            android:layout_margin="@dimen/margin_10dp" />
    </RelativeLayout>


</ScrollView>