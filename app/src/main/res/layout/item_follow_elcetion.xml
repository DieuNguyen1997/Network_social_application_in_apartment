<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5dp"
    android:elevation="@dimen/margin_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_infor_basic_item_follow_election"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_pink"
        android:padding="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/img_avatar_item_follow_election"
            android:layout_width="@dimen/size_70dp"
            android:layout_height="@dimen/size_70dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_name_item_follow_election"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@id/img_avatar_item_follow_election"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date_birth_item_follow_election"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name_item_follow_election"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@id/img_avatar_item_follow_election"
            android:textSize="@dimen/txt_size_15sp" />

        <TextView
            android:id="@+id/txt_count_item_follow_election"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_size_18sp" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>