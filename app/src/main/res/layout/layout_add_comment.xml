<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_5dp">

    <RelativeLayout
        android:id="@+id/add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/margin_5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_comment_layout"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_toLeftOf="@+id/img_send_comment_layout"
            android:layout_toRightOf="@+id/img_avatar_comment_layout"
            android:background="@drawable/background_btn_add_comment">

            <EditText
                android:id="@+id/edt_content_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@android:color/transparent"
                android:hint="@string/txt_add_comment"
                android:maxLines="10" />

