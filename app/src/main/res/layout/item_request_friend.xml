<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/margin_10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_item_request_friend"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_toEndOf="@id/img_avatar_item_request_friend"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_username_item_request_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/txt_username"
            android:textColor="@color/color_Background"
            android:textSize="@dimen/txt_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_result_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/txt_result_friend"
            android:textColor="@color/color_Background"
            android:textSize="@dimen/txt_size_18sp" />

        <LinearLayout

            android:id="@+id/layout_root_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5dp">

            <Button
                android:id="@+id/btn_confirm_item_request_friend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/background_btn_accept"
                android:text="@string/txt_accept"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_size_18sp" />

            <Button
                android:id="@+id/btn_delete_item_request_friend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_weight="1"
                android:background="@drawable/backgroud_btn_delete_request"
                android:text="@string/txt_delete"
                android:textColor="@color/color_Background" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>