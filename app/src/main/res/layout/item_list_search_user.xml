<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_item_user_search"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_toEndOf="@id/img_avatar_item_user_search"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_username_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/txt_username"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name_room_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/txt_username"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <Button
        android:text="@string/txt_follow"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_button"
        android:id="@+id/btn_follow_item_search_user"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_30dp" />
</RelativeLayout>