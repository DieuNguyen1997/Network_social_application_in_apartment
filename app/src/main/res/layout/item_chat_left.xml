<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_300dp"
    android:padding="@dimen/margin_5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_item_chat"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="@color/color_Background"
        android:id="@+id/txt_content_chat"
        android:textSize="@dimen/txt_size_18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_toRightOf="@id/img_avatar_item_chat"
        android:background="@drawable/background_chat_left"
        android:padding="@dimen/margin_8dp"
         />
    
    <TextView
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@color/color_Background"
        android:layout_toRightOf="@id/img_avatar_item_chat"
        android:layout_below="@+id/txt_content_chat"
        android:textSize="@dimen/txt_size_12sp"
        android:id="@+id/txt_time_item_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>